layout: base.njk
title: Blog
---

<h1>Blog Posts</h1>

{%- for post in collections.posts %}
<article class="post-preview">
    <h2>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>
    <time>{{ post.date | readableDate }}</time>
    {% if post.data.description %}
        <p>{{ post.data.description }}</p>
    {% endif %}
</article>
{%- endfor %}